<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_material_dark"
    android:orientation="vertical" >
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#000000" >

            <ImageView
                android:id="@+id/imgBtnFoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_user" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/edtNomeLogin_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_person"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical|bottom"
                    android:hint="Usuário"
                    android:inputType="textPersonName"
                    android:textColor="#00FF00"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:id="@+id/edtSenha_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical|bottom"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:textColor="#00FF00"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:id="@+id/edtConfirmaSenha_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical|bottom"
                    android:hint="Repetir senha"
                    android:inputType="textPassword"
                    android:textColor="#00FF00"
                    android:textColorHint="#ffffff" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.3"
        android:gravity="center_horizontal"
        android:text="Perfil"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1.2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@drawable/fb_ic" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/botao_facebook"
                android:text="Login com Facebook"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edtNomeUsuario_cadastro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_action_person"
            android:drawablePadding="5dp"
            android:ems="10"
            android:gravity="bottom|center_vertical"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:textColor="#00FF00"
            android:textColorHint="#ffffff" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edtEmail_cadastro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_action_mail"
            android:drawablePadding="5dp"
            android:ems="10"
            android:gravity="center_vertical|bottom"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="#00FF00"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/edtTelefone_cadastro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_action_call"
            android:drawablePadding="5dp"
            android:ems="10"
            android:gravity="center_vertical|bottom"
            android:hint="Telefone (opcional)"
            android:inputType="phone"
            android:textColor="#00FF00"
            android:textColorHint="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seu telefone  e e-mail permanecem privados."
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clicando em Registrar-se, você concorda com nossos termos de uso."
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnRegistrar_cadatro_usuario"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/botao_verde"
                android:text="Registrar-se"
                android:textSize="20sp"
                android:textStyle="italic"
                android:typeface="sans" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>